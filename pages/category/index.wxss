.container{
  display: flex;
  justify-content: space-between;
  position: fixed;
  top:100rpx;
  bottom:0;
}

.menu{
  width: 200rpx;
  height:100%;
  background:#eee;
  overflow-y: auto;
}

.menu-item{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-bottom: 1px solid #ddd;
} 

.active{
  background-color: #fff;
  color: #ff2d4a;
  position: relative;
}
.active::before{
  display: block;
  content: "";
  width: 6rpx;
  height: 60rpx;
  background-color: #ff2d4a;
  position: absolute;
  left: 0;
  top: 20rpx;
}